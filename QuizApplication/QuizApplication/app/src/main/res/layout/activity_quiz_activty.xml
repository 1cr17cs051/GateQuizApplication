<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/quizbag"
    android:id="@+id/scroll_view_quiz"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainlayout">

            <TextView
                android:id="@+id/text_view_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Score: 0"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_score"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Question: 1/x"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:freezesText="true"/>

        <TextView
            android:id="@+id/text_view_question_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/timer"
            android:freezesText="true"
            android:text="00:30"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:textAlignment="center"
            android:textColor="#0F0E0E"
            android:textSize="45sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voice_enable_mode"
            android:text="@string/textviewvoice"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_below="@+id/text_view_difficulty"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/text_view_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/text_view_question_count"
            android:text="Category: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:freezesText="true"/>
        <TextView
            android:id="@+id/text_view_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/text_view_category"
            android:text="Difficulty: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:freezesText="true"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/voice_btn"
                    android:layout_below="@+id/voice_enable_mode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_mic_black_24dp"
                />

            <TextView
                android:id="@+id/text_view_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/voice_btn"
                android:layout_marginTop="20dp"
                android:maxLines="200"
                android:text="Question first line"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal"
                android:freezesText="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_question"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/button_cofirm_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_group"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:freezesText="true"
                android:background="@drawable/confirm"
                android:text="CONFIRM"
                android:textSize="25dp"
                android:textColor="#000"
                android:textStyle="bold"
                />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_question"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:text="option1"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:text="option2"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:text="option3"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radio_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:text="option4"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </RadioGroup>


        </RelativeLayout>

</ScrollView>